<body>
    <!-- Header -->
<header id='header'>
<nav>
    <div class="container">
        <div class="text-center bg-warning">
            <a href="/" class="nav-brand text-dark ">User Management System<i class="fab fa-accessible-icon"></i></a>
        </div>
    </div>
</nav>
</Header>
    <!-- /Header --> 
    <div class="container pt-3">
        <p class="mb-2 "><a href="/"> << All User</a></p>
    

<div class="text-center">
    <h3>Update User</h3>
    <p>use the below from The Adit Account</p>
</div>

<form method="POST" id="edit">
    <input type="hidden" name="id" value="<%= users._id %> ">
    <div class="form-group">
       <label for="name">name</label>
       <input type="name" name="name" class="form-control" id="name" value="<%=users.name%>" >
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" name="email" class="form-control" id="email" value="<%=users.email%>">
     </div>


 
<!-- 
     Gender -->
     <div class="form-check-inline">
<label for="gender" class="form-check-label mr-3">Gender</label> 
      
         <input type="radio" name="gender" id="mail" value="mail"<%=users.gender=='mail'?'checked':'' %>>
         <label for="gender" class="form-check-label mx-2">male</label>
         <input type="radio" name="gender" id="famail" value="famail"<%=users.gender=='famail'?'checked':'' %>   >
         <label for="gender" class="form-check-label mx-2">famale</label>
     </div>

     <br>
     <!-- Status -->
     <div class="form-check-inline">
        <label for="status" class="form-check-label mr-4">Status</label> 
              
                 <input type="radio" name="status" id="active" value="active" <%=users.status=='active'?'checked':'' %>>
                 <label for="active" class="form-check-label mx-2">active</label>
                 <input type="radio" name="status" id="inactive"value="inactive" <%=users.status=='inactive'?'checked':'' %>>
                 <label for="inactive" class="form-check-label mx-2">inactive</label>
             </div>

             <button class="btn btn-block btn-dark mt-5" >Save</button>
             

</form>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
